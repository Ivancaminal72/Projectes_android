<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sergi.ivan.carles.artist.ActualEventActivity">

    <TextView
        android:id="@+id/view_group"
        android:text="@string/none_group_selected"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elegantTextHeight="false"
        android:textSize="20sp"
        android:textColor="?android:attr/textColorPrimary"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <TextView
        android:id="@+id/view_song1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/view_group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/textColorPrimary"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_toLeftOf="@+id/points_song_1"
        android:layout_toStartOf="@+id/points_song_1" />

    <TextView
        android:id="@+id/view_song2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/view_song1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/textColorPrimary"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_toLeftOf="@+id/points_song_1"
        android:layout_toStartOf="@+id/points_song_1" />

    <TextView
        android:id="@+id/view_song3"
        android:layout_width="@android:dimen/notification_large_icon_height"
        android:layout_height="25dp"
        android:layout_below="@+id/view_song2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/textColorPrimary"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_toLeftOf="@+id/points_song_2"
        android:layout_toStartOf="@+id/points_song_2" />

    <TextView
        android:id="@+id/view_song4"
        android:layout_width="@android:dimen/notification_large_icon_width"
        android:layout_height="25dp"
        android:layout_below="@+id/view_song3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/textColorPrimary"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_toLeftOf="@+id/points_song_3"
        android:layout_toStartOf="@+id/points_song_3" />

    <Button
        android:id="@+id/btn_vote"
        android:text="@string/vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_song4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_green_dark"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/group_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_vote"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/points_song_1"
        android:layout_width="@android:dimen/notification_large_icon_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_group"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/view_song2"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="textEnd"
        android:paddingRight="8dp" />

    <TextView
        android:id="@+id/points_song_2"
        android:layout_width="@android:dimen/notification_large_icon_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/points_song_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/view_song3"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="textEnd"
        android:paddingRight="8dp" />

    <TextView
        android:id="@+id/points_song_3"
        android:layout_width="@android:dimen/notification_large_icon_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/points_song_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/view_song4"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="textEnd"
        android:paddingRight="8dp" />

    <TextView
        android:id="@+id/points_song_4"
        android:layout_width="@android:dimen/notification_large_icon_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/points_song_3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_vote"
        android:textColor="@android:color/holo_orange_dark"
        android:textAlignment="textEnd"
        android:paddingRight="8dp" />
</RelativeLayout>
