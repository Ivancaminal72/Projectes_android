<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/list_item_thumbnail"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/list_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/list_item_song"
        android:layout_toEndOf="@+id/list_item_song"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/list_item_artist"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:textSize="12sp"
        android:paddingTop="36dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/list_item_thumbnail"
        android:layout_toEndOf="@+id/list_item_thumbnail"/>

    <TextView
        android:id="@+id/list_item_song"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:paddingTop="14dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_item_thumbnail"
        android:layout_toEndOf="@+id/list_item_thumbnail"/>

</RelativeLayout>