<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/list_item_song"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Song"
        android:textSize="16dp"
        android:paddingTop="14dp"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:layout_toRightOf="@+id/list_item_thumbnail"
        android:layout_alignBottom="@+id/list_item_thumbnail" />

    <TextView
        android:id="@+id/list_item_artist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Artist"
        android:textSize="12dp"
        android:paddingTop="36dp"
        android:paddingLeft="20dp"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:layout_toRightOf="@+id/list_item_thumbnail"
        android:layout_alignBottom="@+id/list_item_thumbnail"
        android:ellipsize="end" />

    <CheckBox
        android:id="@+id/list_item_checkbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/list_item_thumbnail"
        android:layout_toRightOf="@+id/list_item_thumbnail"
        android:layout_alignBottom="@+id/list_item_thumbnail"
        android:layout_marginLeft="270dp"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/list_item_thumbnail"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>